/* pages/login/login.wxss */

.header-login {
  position: relative;
  margin-bottom: 10%;
  width: 100%;
  height: 0;
  padding-top: 66%;
}

.login-logo {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}

.loginbox {
  width: 80%;
  margin: 0 auto;
}

.loginitem {
  display: flex;
  height: 92rpx;
  width: 100%;
  margin-top: 50rpx;
  border: 1px solid #979797;
}

.loginicon {
  width: 36rpx;
  height: 40rpx;
  margin: 26rpx 0 0 20rpx;
}

.login-input {
  flex: 1;
  height: 100%;
  padding-left: 24rpx;
}

.loginbtn {
  width: 100%;
  height: 90rpx;
  margin-top: 90rpx;
  background-color: #0088eb;
  opacity: 0.7;
  color: #ffffff;
}

.loginbotm {
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
}

.login-register {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 15px;
  color: #8e8e93;
  text-decoration: underline;
}

.login-password {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 15px;
  color: #8e8e93;
  text-decoration: underline;
}